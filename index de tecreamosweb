    <script>
        // Animación de secciones al hacer scroll
        const sections = document.querySelectorAll("section");
        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("visible");
                }
            });
        }, { threshold: 0.1 });
        sections.forEach(section => observer.observe(section));
        // Menú hamburguesa accesible
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        const navItems = document.querySelectorAll('.nav-links a');
        hamburger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            hamburger.classList.toggle('open');
            hamburger.setAttribute("aria-expanded", navLinks.classList.contains('active'));
        });
        navItems.forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                hamburger.classList.remove('open');
                hamburger.setAttribute("aria-expanded", "false");
            });
        });
        // Efecto de cambio en nav al hacer scroll
        window.addEventListener('scroll', function() {
            const nav = document.querySelector('nav');
            if (window.scrollY > 50) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
        });
        // Smooth scroll para enlaces internos
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // --- CÓDIGO JAVASCRIPT PARA EL CARRUSEL EN MÓVIL ---
        document.addEventListener('DOMContentLoaded', function() {
            const isMobile = window.matchMedia("(max-width: 600px)").matches;
            if (!isMobile) return; // Solo ejecutar si es móvil

            const cardsContainer = document.querySelector('.servicio-cards');
            const cards = Array.from(cardsContainer.querySelectorAll('.card'));
            if (cards.length < 2) return; // No hay suficientes elementos para carrusel

            let currentIndex = 0;
            const totalCards = cards.length;

            // Función para actualizar las clases de visibilidad
            function updateCarousel() {
                cards.forEach((card, index) => {
                    card.classList.remove('active', 'next');
                    if (index === currentIndex) {
                        card.classList.add('active');
                    } else if (index === (currentIndex + 1) % totalCards) {
                        card.classList.add('next');
                    }
                });
            }

            // Inicializar el carrusel
            updateCarousel();

            // Iniciar el intervalo para el cambio automático
            setInterval(() => {
                currentIndex = (currentIndex + 1) % totalCards;
                updateCarousel();
            }, 3000); // Cambia cada 3 segundos
        });
        // --- FIN CÓDIGO CARRUSEL ---

        // Asistente de IA - Mejorado
        const assistantToggle = document.querySelector('.assistant-toggle');
        const assistantWindow = document.querySelector('.assistant-window');
        const assistantClose = document.querySelector('.assistant-close');
        const assistantInput = document.querySelector('.assistant-input input');
        const assistantSend = document.querySelector('.assistant-send');
        const assistantMessages = document.querySelector('.assistant-messages');
        const suggestedQuestions = document.querySelectorAll('.suggested-question');
        // Base de conocimiento del asistente - Mejorada
        const knowledgeBase = {
            "servicios": {
                "preguntas": ["servicios", "qué ofrecen", "qué hacen", "qué ofreces", "qué haces"],
                "respuesta": "Ofrecemos páginas web, gestión de redes sociales y asesoramiento. ¿Quieres saber más sobre páginas web, redes sociales o precios?",
                "sugerencias": ["Páginas Web", "Redes Sociales", "Precios"]
            },
            "precios": {
                "preguntas": ["precios", "cuánto cuesta", "coste", "precio", "tarifas"],
                "respuesta": "Tenemos paquetes desde 200€. ¿Quieres saber sobre la página web, redes + web, mantenimiento o consejos?",
                "sugerencias": ["Precio Página Web", "Precio Redes + Web", "Mantenimiento", "Consejos"]
            },
            "tiempo": {
                "preguntas": ["tiempo", "cuánto tardan", "plazo", "entrega", "cuándo estará lista"],
                "respuesta": "Entregamos en aproximadamente 1 semana. ¿Te gustaría ver cómo es el proceso de trabajo?",
                "sugerencias": ["Proceso de Trabajo"]
            },
            "proceso": {
                "preguntas": ["proceso", "cómo trabajan", "metodología", "cómo es el proceso", "garantía"],
                "respuesta": "Creamos tu web, te la mostramos para revisión. Paga solo si estás satisfecho. ¿Te interesa solicitar tu web ahora?",
                "sugerencias": ["Solicitar Web Ahora"]
            },
