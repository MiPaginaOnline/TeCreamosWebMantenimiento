        // Función para encontrar la respuesta adecuada
        function findAnswer(question) {
            const lowerQuestion = question.toLowerCase();
            for (const category in knowledgeBase) {
                if (category === "default") continue;
                for (const keyword of knowledgeBase[category].preguntas) {
                    if (lowerQuestion.includes(keyword)) {
                        return knowledgeBase[category];
                    }
                }
            }
            return knowledgeBase.default;
        }
        // Función para crear botones de sugerencias dinámicos
        function createSuggestionButtons(suggestions) {
            const container = document.createElement('div');
            container.className = 'dynamic-suggestions';
            suggestions.forEach(text => {
                const button = document.createElement('button');
                button.className = 'suggested-question';
                button.textContent = text;
                button.onclick = () => {
                    // Simular que el usuario escribió la pregunta sugerida
                    processQuestion(text);
                };
                container.appendChild(button);
            });
            return container;
        }
        // Función para agregar mensaje al chat
        function addMessage(text, isUser = false) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isUser ? 'user' : 'assistant'}`;
            messageDiv.innerHTML = text;
            assistantMessages.appendChild(messageDiv);
            assistantMessages.scrollTop = assistantMessages.scrollHeight;
        }
        // Función para procesar pregunta
        function processQuestion(question) {
            addMessage(question, true);
            // Simular tiempo de procesamiento
            setTimeout(() => {
                const responseObj = findAnswer(question);
                addMessage(responseObj.respuesta);
                if (responseObj.sugerencias && responseObj.sugerencias.length > 0) {
                    const suggestionButtons = createSuggestionButtons(responseObj.sugerencias);
                    assistantMessages.appendChild(suggestionButtons);
                    // Asegurar scroll después de añadir botones
                    setTimeout(() => {
                         assistantMessages.scrollTop = assistantMessages.scrollHeight;
                    }, 100);
                }
            }, 1000);
        }
        // Event listeners para el asistente
        assistantToggle.addEventListener('click', () => {
            assistantWindow.classList.toggle('active');
        });
        assistantClose.addEventListener('click', () => {
            assistantWindow.classList.remove('active');
        });
        assistantSend.addEventListener('click', () => {
            const question = assistantInput.value.trim();
            if (question) {
                processQuestion(question);
                assistantInput.value = '';
            }
        });
        assistantInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                const question = assistantInput.value.trim();
                if (question) {
                    processQuestion(question);
                    assistantInput.value = '';
                }
            }
        });
        // Preguntas sugeridas iniciales
        suggestedQuestions.forEach(button => {
            button.addEventListener('click', () => {
                const question = button.getAttribute('data-question');
                processQuestion(question);
                // Ocultar preguntas sugeridas iniciales después de la primera interacción
                document.querySelector('.suggested-questions').style.display = 'none';
            });
        });
        // ANUNCIO DE OFERTA BLACK FRIDAY - Funcionalidad CORREGIDA
        // Mostrar el anuncio después de 1 segundo
        setTimeout(function() {
            document.getElementById('ofertaPopup').classList.add('active');
        }, 1000);
        // Cerrar el anuncio al hacer clic en la X
        document.getElementById('ofertaClose').addEventListener('click', function() {
            document.getElementById('ofertaPopup').classList.remove('active');
        });
        // Cerrar el anuncio al hacer clic fuera del contenido
        document.getElementById('ofertaPopup').addEventListener('click', function(e) {
            if (e.target === this) {
                this.classList.remove('active');
            }
        });
        // Cerrar con la tecla Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                document.getElementById('ofertaPopup').classList.remove('active');
            }
        });
// CONTADOR REGRESIVO CORREGIDO para Black Friday (6 nov - 19 dic 15:00)
function actualizarContador() {
    const ahora = new Date();
    const añoActual = ahora.getFullYear();
    // Fechas de inicio y fin de la oferta
    const inicioOferta = new Date(añoActual, 10, 6); // 6 de noviembre
    const finOferta = new Date(añoActual, 11, 19, 15, 0, 0); // 19 de diciembre a las 15:00:00
    
    // Verificar si estamos dentro del período de oferta
    if (ahora >= inicioOferta && ahora <= finOferta) {
        // Calcular tiempo restante hasta el fin de la oferta
        const diferencia = finOferta - ahora;
        const dias = Math.floor(diferencia / (1000 * 60 * 60 * 24));
        const horas = Math.floor((diferencia % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutos = Math.floor((diferencia % (1000 * 60 * 60)) / (1000 * 60));
        const segundos = Math.floor((diferencia % (1000 * 60)) / 1000);
        
        document.getElementById('dias').textContent = dias.toString().padStart(2, '0');
        document.getElementById('horas').textContent = horas.toString().padStart(2, '0');
        document.getElementById('minutos').textContent = minutos.toString().padStart(2, '0');
        document.getElementById('segundos').textContent = segundos.toString().padStart(2, '0');
    } else if (ahora < inicioOferta) {
        // Si aún no ha comenzado la oferta
        document.getElementById('dias').textContent = '00';
        document.getElementById('horas').textContent = '00';
        document.getElementById('minutos').textContent = '00';
        document.getElementById('segundos').textContent = '00';
        document.querySelector('.oferta-aviso').textContent = 'Oferta próxima: 6 de noviembre';
    } else {
        // Si ya pasó la oferta
        document.getElementById('dias').textContent = '00';
        document.getElementById('horas').textContent = '00';
        document.getElementById('minutos').textContent = '00';
        document.getElementById('segundos').textContent = '00';
        document.querySelector('.oferta-aviso').textContent = 'Oferta finalizada';
    }
}

// Actualizar el contador cada segundo
setInterval(actualizarContador, 1000);
actualizarContador(); // Ejecutar inmediatamente
    </script> 
</body>
</html>
